{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom","dom.iterable","esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",            
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,

    "jsx": "react-jsx",                    
    "baseUrl": ".",                       
    "paths": { "@/*": ["src/*"] },

    "types": [                             
      "jest",
      "@testing-library/jest-dom"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "jest.setup.ts" ,                      
    "src/tests"                            
  ],
  "exclude": ["node_modules"]
}